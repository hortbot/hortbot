{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "helpers:pinGitHubActionDigests"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github actions",
            "groupSlug": "github-actions"
        },
        {
            "managers": [
                "docker-compose"
            ],
            "updateTypes": [
                "pin",
                "digest"
            ],
            "enabled": false
        }
    ]
}
